<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <changeSet author="QUARKUS_DEMO" id="PRODUCT_SET">
        <createTable tableName="PRODUCT_SET" remarks="Table to store product set information">
            <column name="CODE" type="VARCHAR(10)" remarks="Unique code for the set">
                <constraints primaryKey="true" nullable="false" primaryKeyName="PK_PRODUCT_SET"/>
            </column>
            <column name="NAME" type="VARCHAR(255)" remarks="Name of the set">
                <constraints nullable="false"/>
            </column>
            <column name="SPECIALTY" type="VARCHAR(3)" defaultValue="NO" remarks="Indicates if it is a specialty set">
                <constraints nullable="false"/>
            </column>
            <column name="RELEASE_DATE" type="DATE" remarks="Release date of the set">
                <constraints nullable="true"/>
            </column>
            <column name="SERIES" type="VARCHAR(255)" remarks="Series to which the set belongs">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addUniqueConstraint
            tableName="PRODUCT_SET"
            columnNames="NAME"
            constraintName="UNIQUE_PRODUCT_SET_NAME"/>
    </changeSet>
</databaseChangeLog>