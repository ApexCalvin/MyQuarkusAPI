<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <changeSet author="MYQUARKUSAPI" id="HERO">
        <createTable tableName="HERO">
            <column name="ID" type="VARCHAR(19)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ALIAS" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="CAN_FLY" type="BIT(1)" />
            <!-- ModifiableEntity fields -->
            <column name="CREATED_BY" type="VARCHAR(10)" defaultValue="SYSTEM"/>
            <column name="CREATED_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="MODIFIED_BY" type="VARCHAR(10)"/>
            <column name="MODIFIED_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>